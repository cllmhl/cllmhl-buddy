# --- CHROMA / DATABASE ---
CHROMA_TELEMETRY_OPT_OUT=True
ANONYMIZED_TELEMETRY=False

# --- STT and TSS
STT_MODE=cloud   # o 'local' (da implementare con Whisper)
TTS_MODE=cloud   # o 'local' implementato con Piper
TTS_VOICE=paola # o 'riccardo' se si vuole usare Riccardo
WAKE_WORD_PATH=Ei-Buddy_en_raspberry-pi_v4_0_0.ppn

# --- SENSORI ---
RADAR_ENABLED=true
RADAR_PORT=/dev/ttyAMA0
RADAR_BAUDRATE=256000
RADAR_INTERVAL=0.5

DHT11_ENABLED=true
DHT11_PIN=18
DHT11_INTERVAL=1
