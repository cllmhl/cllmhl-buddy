{
    "name": "Buddy",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylint",
                "tamasfe.even-better-toml",
                "njpwerner.autodocstring"
            ]
        }
    },
    "features": {},
    // Esegui comandi dopo la creazione del container.
    // Se .env non esiste, lo crea da .env.example
    "postCreateCommand": "if [ ! -f .env ]; then cp .env.example .env; fi",
    // Aggiorna pip e installa le dipendenze da requirements.txt.
    "postStartCommand": "pip install --upgrade pip && pip install -r requirements.txt && export BUDDY_HOME=/workspaces/cllmhl-buddy",
    "remoteUser": "vscode"
}
