{
	"name": "Buddy",
	// Usa un'immagine Docker pre-configurata per Python.
	"image": "mcr.microsoft.com/devcontainers/python:3.11-bullseye",

	// Esegui comandi dopo la creazione del container.
	// 1. Se .env non esiste, lo crea da .env.example
	// 2. Aggiorna pip e installa le dipendenze da requirements.txt.
	"postCreateCommand": "if [ ! -f .env ]; then cp .env.example .env; fi && pip install --upgrade pip && pip install -r requirements.txt",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			// Aggiungi le estensioni VS Code consigliate.
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylint",
				"tamasfe.even-better-toml",
				"njpwerner.autodocstring"
			]
		}
	},
	// Esegui il container come utente non-root.
	"remoteUser": "vscode"
}